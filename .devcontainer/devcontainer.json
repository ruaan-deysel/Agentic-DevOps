{
    "name": "DevOps",
    "dockerComposeFile": "docker-compose.yml",
    "service": "devops",
    "workspaceFolder": "/workspaces/Azure-DevOps",
    "remoteUser": "vscode",

    // Set up VS Code settings and extensions
    "customizations": {
        "vscode": {
            "extensions": [
                // Azure Extensions
                "ms-azuretools.vscode-azureresourcegroups",
                "ms-azuretools.vscode-bicep",
                "ms-vscode.azurecli",
                "ms-azuretools.vscode-azure-mcp-server",
                // Removed deprecated extensions:
                // - "msazurermtools.azurerm-vscode-tools" (Azure Resource Manager Tools - deprecated)
                // - "ms-vscode.azure-account" (Azure Account - deprecated)

                // IaC Extensions
                "hashicorp.terraform",
                "ms-azuretools.vscode-azureterraform",
                "redhat.ansible",

                // Kubernetes Extensions
                "ms-kubernetes-tools.vscode-kubernetes-tools",

                // Language Extensions
                "ms-vscode.powershell",
                "redhat.vscode-yaml",

                // DevOps Extensions
                "github.vscode-github-actions",
                "ms-azure-devops.azure-pipelines",

                // Code Quality Extensions
                "timonwong.shellcheck",
                "DavidAnson.vscode-markdownlint",

                // Code Formatting Extensions
                "esbenp.prettier-vscode",
                "oderwat.indent-rainbow"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "pwsh",
                "editor.formatOnSave": true,
                "editor.formatOnType": true,
                "files.trimTrailingWhitespace": true,
                "files.insertFinalNewline": true
            }
        }
    },

    // Run post-create script
    "postCreateCommand": "chmod +x ./.devcontainer/scripts/post-create.sh && ./.devcontainer/scripts/post-create.sh",

    // For improved security, we'll use the non-root user
    "updateRemoteUserUID": true
}
